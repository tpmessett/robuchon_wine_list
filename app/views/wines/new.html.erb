<div class="header new-form-header">
  <h3>Add a new wine:</h3>
</div>
<div class="container">
  <%= simple_form_for(@wine) do |f| %>
    <div class="half-container d-flex justify-content-between">
      <%= f.input :name, label: 'Wine Name' %>
      <%= f.input :wine_type, as: :select, collection: ["Red", "White", "Rose", "Sparkling", "Champagne", "Prosecco"], prompt: 'Select Type',label: 'Wine Type' %>
    </div>
    <div class="half-container d-flex justify-content-between">
      <%= f.input :vintage, label: 'Vintage'%>
      <%= f.input :vineyard, label: 'Vineyard' %>
    </div>
    <div class="half-container d-flex justify-content-between">
      <%= f.input :region, label: 'Region'%>
      <%= f.input :wine_region_map, as: :file %>
    </div>
    <div class="half-container d-flex justify-content-between">
      <%= f.input :serving_temperature, label: 'Serving Temperature'%>
      <%= f.input :price, as: :float, label: 'Price'%>
    </div>
    <div class="half-container d-flex justify-content-between">
      <%= f.input :guard, label: 'Guard'%>
      <%= f.input :weight, label: 'Weight'%>
    </div>
    <%= f.input :description, label: 'Wine description'%>
    <div class="multi-input-wrap" id="product-info-div">
      <div class="array-inputs d-flex align-items-center">
        <%= f.input :product_information, as: :array, input_html: { class: 'form-control' } %>
        <div class='plus-btn btn btn-outline-primary' id='product-info-button'>
          <i class="fas fa-plus"></i>
        </div>
      </div>
    </div>
    <div class="multi-input-wrap" id="food-pairings-info-div">
      <div class="array-inputs d-flex align-items-center">
        <%= f.input :food_pairings, as: :array, input_html: { class: 'form-control' } %>
        <div class='plus-btn btn btn-outline-primary' id='food-pairings-info-button'>
          <i class="fas fa-plus"></i>
        </div>
      </div>
    </div>
    <div class="multi-input-wrap" id="tasting-notes-info-div">
      <div class="array-inputs d-flex align-items-center">
        <%= f.input :tasting_notes, as: :array, input_html: { class: 'form-control' } %>
        <div class='plus-btn btn btn-outline-primary' id='tasting-notes-info-button'>
          <i class="fas fa-plus"></i>
        </div>
      </div>
    </div>
    <div class="multi-input-wrap" id="allergens-info-div">
      <div class="array-inputs d-flex align-items-center">
        <%= f.input :allergens, as: :array, input_html: { class: 'form-control' } %>
        <div class='plus-btn btn btn-outline-primary' id='allergens-info-button'>
          <i class="fas fa-plus"></i>
        </div>
      </div>
    </div>
    <%= f.input :organic %>
    <%= f.input :biodynamic %>
    <%= f.input :photo, as: :file %>
    <div class="form-submit btn btn-outline-primary">
      <%= f.button :submit, "Create" %>
    </div>
  <%end%>
</div>
